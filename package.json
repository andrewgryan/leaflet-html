{
  "name": "leaflet-html",
  "type": "module",
  "version": "0.8.4",
  "description": "Leaflet expressed in HTML, optimized for HTMX",
  "keywords": [
    "leaflet",
    "hda",
    "html",
    "hypermedia",
    "maps",
    "htmx"
  ],
  "source": "src/index.js",
  "main": "./dist/leaflet-html.cjs",
  "module": "./dist/leaflet-html.js",
  "author": "andrewgryan",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewgryan/leaflet-html.git"
  },
  "homepage": "https://andrewgryan.github.io/leaflet-html",
  "license": "MIT",
  "scripts": {
    "build": "microbundle --format esm",
    "watch": "microbundle watch -o ./docs/static --format esm",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:watch": "vitest watch --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "happy-dom": "^14.10.1",
    "microbundle": "^0.15.1",
    "prettier": "3.2.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  }
}
